<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".remedies">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:justificationMode="inter_word"
                android:textColor="@color/black"
                android:text="Yoga"
                android:textSize="25dp">

            </TextView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/yoga" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:justificationMode="inter_word"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:text="7 Yoga Poses to Help Ease Menstrual Pain"
                android:textSize="25dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:text="@string/yoga1"
                 />



            <Button
                android:id="@+id/yoga_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bound Angle Pose - Baddha Konasana"
                android:backgroundTint="@color/pink"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

            </Button>

            <Button
                android:id="@+id/yoga_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Reclined Bound Angle - Supta Baddha Konasana"
                android:backgroundTint="@color/pink"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp">

            </Button>

            <Button
                android:id="@+id/yoga_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Childâ€™s Pose - Balasana"
                android:backgroundTint="@color/pink"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp">

            </Button>

            <Button
                android:id="@+id/yoga_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wide Angle Seated Forward Bend - Upavistha Konasana"
                android:backgroundTint="@color/pink"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp">

            </Button>

            <Button
                android:id="@+id/yoga_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Reclining Twist - Bharadvaja"
                android:backgroundTint="@color/pink"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/yoga_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Inverted leg pose - Viparita Karani"
                android:backgroundTint="@color/pink"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/yoga_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Head to Knee Forward Bend - Janu Sirsasana"
                android:backgroundTint="@color/pink"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"/>







        </LinearLayout>
    </ScrollView>

</LinearLayout>